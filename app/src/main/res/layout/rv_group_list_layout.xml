<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/lClick"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_grpList_groupName"
            android:text="Group 1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:layout_below="@+id/tv_rv_grpList_groupName"
            android:text="Group ID: "
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_grpList_groupId"
            android:layout_toRightOf="@+id/tv2"
            android:layout_below="@+id/tv_rv_grpList_groupName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tvBtnRemoveGroup"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/remove_textfield"
            android:drawableStart="@drawable/ic_remove_group"
            android:text="Remove"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>